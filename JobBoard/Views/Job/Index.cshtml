@{
    ViewBag.Title = "Home";
}

<!--URL-->
<input type="hidden" id="url-get-jobs" value="@Url.Action("_GetJobs", "Job")" />
<input type="hidden" id="url-modal-add" value="@Url.Action("_AddJob", "Job")" />
<input type="hidden" id="url-save-add" value="@Url.Action("Save", "Job")" />
<input type="hidden" id="url-modal-edit" value="@Url.Action("_Edit", "Job")" />
<input type="hidden" id="url-save-edit" value="@Url.Action("SaveEdit", "Job")" />
<input type="hidden" id="url-delete" value="@Url.Action("Delete", "Job")" />
<!---->

<div class="card mx-auto custom-card col-md-12">
    <div class="row">
        <button class="btn btn-purple" id="btn-add-job">
            <i class="fa fa-plus-circle pr-2"></i> Add Job
        </button>
    </div>
    <div class="row">
        <div class="table-responsive mt-4" id="div-job-table">
            @Html.Action("_GetJobs", "Job")
        </div>
    </div>
</div>


<!-- Modal Area -->
<div id="modal-job">

</div>
